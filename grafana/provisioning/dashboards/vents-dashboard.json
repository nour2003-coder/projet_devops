{
  "id": null,
  "uid": "events-dashboard",
  "title": "EventsProject - Monitoring",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "tags": ["events", "springboot", "docker"],
  "panels": [
    {
      "type": "timeseries",
      "title": "Spring Boot - HTTP Requests per second",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "{{method}} {{uri}} {{status}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "JVM Memory Used (MB)",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes / 1024 / 1024",
          "legendFormat": "{{area}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Container CPU Usage (cAdvisor)",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total[1m])",
          "legendFormat": "{{container}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Host CPU Usage (node-exporter)",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
          "legendFormat": "CPU usage {{instance}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
